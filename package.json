{
  "name": "react-contextmenu",
  "version": "2.2.1",
  "description": "Context Menu implemented in React",
  "main": "modules/index.js",
  "module": "es6/index.js",
  "keywords": [
    "react",
    "reactjs",
    "react-component",
    "contextmenu",
    "rightclick"
  ],
  "scripts": {
    "eslint": "eslint ./src ./examples",
    "test": "npm run eslint && npm run jest",
    "jest": "jest --no-cache --verbose --coverage",
    "jest:dev": "jest --watchAll --no-cache --verbose --coverage",
    "clean": "rimraf -rf ./dist && rimraf -rf ./modules && rimraf ./es6",
    "start": "node server.js",
    "dist": "webpack --progress --profile --colors",
    "modules": "BABEL_ENV=es5 babel src --out-dir modules",
    "modules:es6": "BABEL_ENV=es6 babel src --out-dir es6",
    "build": "npm run clean && npm run test && npm run dist && npm run modules && npm run modules:es6",
    "build:examples": "rimraf -f ./examples/bundle.js && BABEL_ENV=es6 NODE_ENV=production webpack --config examples.config.js --progress --profile --colors",
    "prepublish": "npm run build"
  },
  "author": "Vivek Kumar Bansal <contact@vkbansal.me>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vkbansal/react-contextmenu.git"
  },
  "bugs": {
    "url": "https://github.com/vkbansal/react-contextmenu/issues"
  },
  "homepage": "https://github.com/vkbansal/react-contextmenu",
  "dependencies": {
    "classnames": "^2.2.5",
    "object-assign": "^4.1.0"
  },
  "peerDependencies": {
    "react": "^0.14.0 || ^15.0.0",
    "react-dom": "^0.14.0 || ^15.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^18.0.0",
    "babel-loader": "^6.2.10",
    "babel-preset-env": "^1.1.8",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-2": "^6.22.0",
    "babel-register": "^6.22.0",
    "coveralls": "^2.11.16",
    "enzyme": "^2.7.1",
    "enzyme-to-json": "^1.4.5",
    "eslint": "^3.14.1",
    "eslint-config-vkbansal": "^4.3.1",
    "eslint-import-resolver-webpack": "^0.8.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-react": "^6.9.0",
    "eslint-plugin-standard": "^2.0.1",
    "express": "^4.14.0",
    "history": "^4.4.1",
    "jest": "^18.1.0",
    "jsdom": "^9.11.0",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-router": "^3.0.0",
    "rimraf": "^2.5.4",
    "webpack": "^2.2.1",
    "webpack-dev-middleware": "^1.10.0",
    "webpack-hot-middleware": "^2.16.1"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/tests/.setup.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "testPathDirs": [
      "<rootDir>/tests"
    ],
    "collectCoverageFrom": [
      "**/src/**/*.js"
    ]
  }
}
